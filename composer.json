{
	"name": "simialbi/yii2-widget-chart",
	"description": "Chart implementation of chartist for yii2 framework",
	"keywords": ["yii2", "chartist", "charts"],
	"type": "yii2-extension",
	"license": "MIT",
	"support": {
		"issues": "https://github.com/simialbi/yii2-widget-chart/issues",
		"source": "https://github.com/simialbi/yii2-widget-chart"
	},
	"authors": [
		{
			"name": "Simon Karlen",
			"email": "simi.albi@gmail.com"
		}
	],
	"prefer-stable": true,
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
	],
	"require": {
		"yiisoft/yii2": "~2.0",
		"yiisoft/yii2-bootstrap": "~2.0",
		"simialbi/yii2-simialbi-base": "*",
		"npm-asset/chartist": "*",
		"npm-asset/chartist-plugin-legend": "*"
	},
	"config": {
		"process-timeout": 1800
	},
	"autoload": {
		"psr-4": { "simialbi\\yii2\\chart\\": "" }
	}
}